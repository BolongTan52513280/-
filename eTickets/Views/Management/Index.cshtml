@model Management

<html>
<head>

</head>
<body>

    <h3>Item List</h3>
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>ImageURL</th>
            <th>weight</th>
            <th>volume</th>
            <th>stock</th>
        </tr>
        @foreach (var item in ViewBag.Items)
        {
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.Description</td>
        <td>@item.Price</td>
        <td>@item.ImageURL</td>
        <td>@item.weight</td>
        <td>@item.volume</td>
        <td>@item.stock</td>

        <td class="align-middle">
            <a class="text-danger" asp-controller="Management" asp-action="RemoveProductFromStock"
               asp-route-id="@item.Id">
                <i class="bi bi-cart-dash"></i>
            </a>
            |
            <a class="text-success" asp-controller="Management" asp-action="AddProductFromStock"
               asp-route-id="@item.Id">
                <i class="bi bi-cart-plus"></i>
            </a>
        </td>
    </tr>
        }
    </table>

</body>
</html>